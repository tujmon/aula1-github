import java.util.Locale;

public class Pc {

	public static void main(String[] args) {
		String product1 = "Computer";
		String product2 = "Office desk";
		
		int age = 30;
		int code = 5290;
		char gender ='f';
		double price1 = 2100.00;
		double price2 = 650.50;
		double measure = 53.234567;
		
		System.out.println("Products:");
		System.out.println("Computer,wich price is $"+ price1);
		System.out.println("Office desk,which price is $"+ price2);
		System.out.printf("%n");
		System.out.println("record: "+ age + " years old, code " +code +" and gender:"+ gender);
		System.out.printf("%n");
		System.out.printf("Measure with eight decimal places: %.8f",measure);
		System.out.printf("Rouded (three decimal places): %.3f",measure);
		Locale.setDefault(Locale.US);
		
	}

}
